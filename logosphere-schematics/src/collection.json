{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "application": {
      "factory": "./lib/application/application.factory#main",
      "description": "Create a Logosphere application.",
      "schema": "./lib/application/schema.json"
    },
    "schema": {
      "factory": "./lib/schema/schema.factory#main",
      "description": "Generate Logosphere schemas",
      "schema": "./lib/schema/schema.json"
    },
    "module": {
      "factory": "./lib/module/module.factory#main",
      "description": "Generate Logosphere modules",
      "schema": "./lib/module/schema.json"
    },
    "dto": {
      "factory": "./lib/dto/dto.factory#main",
      "description": "Generate DTOs (Data Transfer Objects)",
      "schema": "./lib/dto/schema.json"
    }
  }
}