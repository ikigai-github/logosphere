{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "user",
    "type": "object",
    "$defs": {
        "user": {
            "isActivated": true,
            "type": "object",
            "properties": {
                "username": {
                    "isActivated": true,
                    "type": "string",
                    "description": "Unique username that user can pick for themselves. "
                },
                "handle": {
                    "isActivated": true,
                    "type": "string",
                    "description": "Handle, such as from adahandle.io"
                },
                "wallets": {
                    "isActivated": true,
                    "type": "array",
                    "description": "Wallets that belong to the user",
                    "items": {
                        "$ref": "#/$defs/wallet",
                        "isActivated": true,
                        "displayName": "wallet"
                    }
                },
                "nfts": {
                    "isActivated": true,
                    "type": "array",
                    "description": "NFTs that the user is an owner of",
                    "items": {
                        "isActivated": true,
                        "default": "minting.hck.json#nft",
                        "displayName": "nft"
                    }
                },
                "artworks": {
                    "isActivated": true,
                    "type": "array",
                    "description": "Artworks that user is an owner of",
                    "items": {
                        "isActivated": true,
                        "displayName": "artwork",
                        "default": "minting.hck.json#artwork"
                    }
                },
                "listings": {
                    "isActivated": true,
                    "type": "array",
                    "description": "Auction listings that the user is an owner of",
                    "items": {
                        "isActivated": true,
                        "displayName": "listing",
                        "default": "auction.hck.json#listing"
                    }
                },
                "bids": {
                    "isActivated": true,
                    "type": "array",
                    "description": "Active bids that the user placed on an auction",
                    "items": {
                        "isActivated": true,
                        "displayName": "bid",
                        "default": "auction.hck.json#bid"
                    }
                }
            },
            "additionalProperties": false,
            "description": "User of the NFT marketplace"
        },
        "wallet": {
            "isActivated": true,
            "type": "object",
            "properties": {
                "address": {
                    "isActivated": true,
                    "type": "string",
                    "description": "Address of the wallet"
                },
                "owner": {
                    "$ref": "#/$defs/user",
                    "isActivated": true
                }
            },
            "additionalProperties": false,
            "description": "An ADA crypto wallet, custodial or non-custodial"
        }
    },
    "properties": {
        "user": {
            "$ref": "#/$defs/user",
            "isActivated": true
        },
        "wallet": {
            "$ref": "#/$defs/wallet",
            "isActivated": true
        }
    }
}