{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsLogosphereApplication",
  "title": "Logosphere Application Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the new project?"
    },
    "author": {
      "type": "string",
      "description": "Logosphere application author.",
      "default": ""
    },
    "description": {
      "type": "string",
      "description": "Logosphere application description.",
      "default": ""
    },
    "directory": {
      "type": "string",
      "description": "Logosphere application destination directory."
    },
    "strict": {
      "type": "boolean",
      "description": "With TypeScript strict mode.",
      "default": false
    },
    "version": {
      "type": "string",
      "description": "Logosphere application version.",
      "default": "0.0.1"
    },
    "language": {
      "type": "string",
      "description": "Logosphere application language."
    },
    "packageManager": {
      "type": "string",
      "description": "Logosphere application package manager."
    },
    "dependencies": {
      "type": "string",
      "description": "Logosphere application dependencies."
    },
    "devDependencies": {
      "type": "string",
      "description": "Logosphere application development dependencies."
    }
  },
  "required": ["name"]
}