{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsLogosphereSchema",
  "title": "Logosphere Schema Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the schema"
    },
    "schemaType": {
      "type": "string",
      "description": "Type of the schema to generate."
    },
    "module": {
      "type": "string",
      "description": "Name of the module to generate the schema for"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the schema."
    },
    "sourceRoot": {
      "type": "string",
      "description": "Schema source root directory."
    },
    "spec": {
      "type": "boolean",
      "default": false,
      "description": "Specifies if a spec file is generated."
    },
    "flat": {
      "type": "boolean",
      "default": false,
      "description": "Flag to indicate if a directory is created."
    },
    "content": {
      "type": "string",
      "description": "Generated schema content"
    }
  },
  "required": ["name"]
}