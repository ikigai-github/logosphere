{
  "name": "@logosphere/schematics",
  "version": "0.0.1",
  "description": "NestJS schematics for Logosphere CLI",
  "author": "Ikigai Technologies",
  "private": true,
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/ikigai-github/logosphere/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ikigai-github/logosphere.git"
  },
  "scripts": {
    "postbuild": "npm run copy:collection && npm run copy:lib",
    "build": "rm -rf dist && tsc --project tsconfig.lib.json",
    "clean": "gulp clean:src",
    "copy:collection": "cpx src/collection.json dist && cpx 'src/lib/**/schema.json' dist/lib",
    "copy:lib": "cpx 'src/lib/**/{files,workspace}/**/*.*' dist/lib && cpx 'src/lib/**/{files,workspace}/**/.!(gitignore)' dist/lib",
    "lint": "eslint '{src,test}/**/*.ts' --fix",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "test": "npm run clean && cross-env NODE_ENV=test jest -w 1 --no-cache --config jest.json",
    "test:dev": "cross-env NODE_ENV=test npm run -s test -- --watchAll",
    "prerelease": "npm run build",
    "release": "release-it"
  },
  "dependencies": {
    "@angular-devkit/core": "13.2.5",
    "@angular-devkit/schematics": "13.2.5",
    "@nestjs/schematics": "8.0.8",
    "fs-extra": "10.0.1",
    "jsonc-parser": "3.0.0",
    "pluralize": "8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-angular": "16.2.3",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.4.1",
    "@types/node": "16.11.26",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "cpx": "1.5.0",
    "cross-env": "7.0.3",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "gulp": "4.0.2",
    "gulp-clean": "0.4.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "nyc": "15.1.0",
    "release-it": "14.13.1",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "schematics": "./dist/collection.json",
  "nyc": {
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "test"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
