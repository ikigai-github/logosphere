{
  "name": "@logosphere/sdk",
  "version": "0.0.1",
  "description": "TypeScript SDK for logosphere.io - Cardano L2 metadata sidechain",
  "main": "../dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node $npm_config_file",
    "lint": "eslint \"{src,apps,lib,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ikigai-github/logosphere.git"
  },
  "keywords": [
    "metadata",
    "l2",
    "sidechain",
    "cardano"
  ],
  "author": "Ikigai Technologies",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ikigai-github/logosphere/issues"
  },
  "dependencies": {
    "@nestjs/common": "8.2.4",
    "@nestjs/config": "1.1.6",
    "@nestjs/core": "8.2.4",
    "@types/lodash": "4.14.178",
    "axios": "0.24.0",
    "graphql": "15.8.0",
    "lodash": "4.17.21",
    "pascal-case": "3.1.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.2"
  },
  "devDependencies": {
    "@nestjs/testing": "8.2.4",
    "@types/chai": "4.2.19",
    "@types/chai-as-promised": "7.1.4",
    "@types/jest": "27.0.2",
    "@types/node": "15.14.9",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.2.5",
    "prettier": "2.3.2",
    "ts-jest": "27.0.3",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prettier": {
    "singleQuote": true
  },
  "homepage": "https://github.com/ikigai-github/logosphere#readme"
}
