{
  "name": "@logosphere/sdk",
  "version": "0.0.1",
  "description": "TypeScript SDK for logosphere.io - Cardano L2 metadata sidechain",
  "main": "../dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node $npm_config_file",
    "lint": "eslint \"{src,apps,lib,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ikigai-github/logosphere.git"
  },
  "keywords": [
    "metadata",
    "l2",
    "sidechain",
    "cardano"
  ],
  "author": "Ikigai Technologies",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ikigai-github/logosphere/issues"
  },
  "dependencies": {
    "@fluree/flureenjs": "^1.0.0-rc56",
    "@nestjs/common": "8.4.3",
    "@nestjs/config": "2.0.0",
    "@nestjs/core": "8.4.3",
    "@types/lodash": "4.14.181",
    "axios": "0.26.1",
    "graphql": "16.3.0",
    "lodash": "4.17.21",
    "pascal-case": "3.1.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.5"
  },
  "devDependencies": {
    "@nestjs/testing": "8.4.3",
    "@types/chai": "4.3.0",
    "@types/chai-as-promised": "7.1.5",
    "@types/jest": "27.4.1",
    "@types/node": "16.11.26",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "js-sha3": "0.8.0",
    "prettier": "2.6.1",
    "randomstring": "1.2.1",
    "sleep-promise": "9.1.0",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3",
    "typescript-string-operations": "1.4.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prettier": {
    "singleQuote": true
  },
  "homepage": "https://github.com/ikigai-github/logosphere#readme"
}
