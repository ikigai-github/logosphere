{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "auction",
    "type": "object",
    "$defs": {
        "listing": {
            "isActivated": true,
            "type": "object",
            "properties": {
                "nft": {
                    "$ref": "../minting/minting.hck.json#/definitions/properties/nft",
                    "isActivated": true
                },
                "minimumPrice": {
                    "isActivated": true,
                    "type": "number"
                },
                "buyNowPrice": {
                    "isActivated": true,
                    "type": "number"
                },
                "startTime": {
                    "isActivated": true,
                    "type": "integer"
                },
                "endTime": {
                    "isActivated": true,
                    "type": "integer"
                },
                "currentBid": {
                    "$ref": "#/$defs/bid",
                    "isActivated": true
                }
            },
            "additionalProperties": false
        },
        "bid": {
            "isActivated": true,
            "type": "object",
            "properties": {
                "bidder": {
                    "$ref": "../user/user.hck.json#/definitions/properties/user",
                    "isActivated": true
                },
                "listing": {
                    "$ref": "#/$defs/listing",
                    "isActivated": true
                },
                "bidPrice": {
                    "isActivated": true,
                    "type": "number"
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "listing": {
            "$ref": "#/$defs/listing",
            "isActivated": true
        },
        "bid": {
            "$ref": "#/$defs/bid",
            "isActivated": true
        }
    }
}